<% if user_signed_in? %>
<div class="tile is-parent">
  <article class="tile is-child notification is-primary-is-inverted is-rounded">
    <p class="title"> <%= current_user.name %> </p>
    <p class="subtitle"><%= current_user.username %></p>
    <p class="subtitle"><%= current_user.email %></p>
    <p class="subtitle"><%= current_user.publications %></p>
<!--    <li class="round-image-50"><%#= image_tag(current_user.avatar.url(:thumb)) %></li>-->
<% end %>
</article>
</div>
<% current_user.posts.each do | post |  %>
    <div class="tile is-parent">
      <div class="tile is-child box">
        <div class="content">
          <p> <%= post.post  %><br>
            Post Created At :<%= post.created_at  %></p><br>
             <% if user_signed_in? && current_user == post.user  %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to post, class: "level-item" do %>
                  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to edit_post_path(post),class:"level-item" do %>
                  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to post, method: :delete, data: { confirm: "are you sure you want to delete this post?"
                } do %>
                  <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i> </span>
                <% end %>
              </div>
            </nav>
            </div>
            </div>
      </div>
  <% end %>
<% end %>